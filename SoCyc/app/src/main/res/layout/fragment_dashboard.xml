<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".boundary.dashboard.DashboardFragment">

    <Button
        android:id="@+id/btn_hostevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Host Event"
        app:layout_constraintStart_toStartOf="@+id/txt_title1"
        app:layout_constraintTop_toBottomOf="@+id/txt_title1" />

    <Button
        android:id="@+id/btn_manageevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_hostevent"
        app:layout_constraintTop_toTopOf="@+id/btn_hostevent" />

    <Button
        android:id="@+id/btn_publicevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Public Events"
        app:layout_constraintEnd_toEndOf="@+id/btn_manageevent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_title1"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btn_eventdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="View My Event Details"
        app:layout_constraintStart_toStartOf="@+id/txt_title1"
        app:layout_constraintTop_toBottomOf="@+id/btn_hostevent" />

    <TextView
        android:id="@+id/txt_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="My Events"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="My Joined Events"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_eventdetails" />

    <ListView
        android:id="@+id/list_dashboardlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:divider="@color/red_a100"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/txt_title2">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>